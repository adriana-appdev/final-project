<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Connect Font Awesome CSS -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.2/css/all.css">

    <!-- Connect Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">

    <!-- Connect Bootstrap JavaScript and its dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <div>
        <a href="https://final-project-adriana-adrianabrito.c9users.io/">
          <i class="fab fa-firstdraft fa-fw"></i>

          Home
        </a>
      </div>

      <div>
        <a href="/drinks">
          <i class="fas fa-plus fa-fw"></i>

          View Drinks
        </a>
      </div>

      <div>
        <a href="/favorites">
          <i class="fas fa-clock fa-fw"></i>

          View Favorites
        </a>
      </div>

      <div>
        <a href="/caffeine_servings">
          <i class="fas fa-fire fa-fw"></i>

          Caffeine Servings
        </a>
      </div>
      
      <div>
        <a href="/calccaffeine">
          <i class="fas fa-fire fa-fw"></i>

          Register a Consumption
        </a>
      </div>
      <div>
        <a href="/users">
          <i class="fas fa-users"></i>

          User
        </a>
      </div>

      <hr>

      <% if current_user.blank? %>
        <div>
          <a href="/users/sign_in">
            Sign in
          </a>
        </div>

        <div>
          <a href="/users/sign_up">
            Sign up
          </a>
        </div>
      <% else %>
        <div>
          <a href="/users/edit">
            Edit profile
          </a>
        </div>

        <div>
          <a href="/users/sign_out" data-method="delete">
            Sign out
          </a>
        </div>
      <% end %>
    </nav>
    <%= yield %>

    <%= dev_tools if Rails.env.development? %>
  </body>
</html>
