<h1>
  Edit favorite #<%= @favorite.id %>
</h1>

<hr>

<form action="/update_favorite/<%= @favorite.id %>" method="post">

  <div class="form-group">
    <label for="coffee_chain">
      Coffee chain
    </label>

    <input type="text" id="coffee_chain" name="coffee_chain" class="form-control" value="<%= @favorite.coffee_chain %>">
  </div>

  <div class="form-group">
    <label for="size">
      Size
    </label>

    <input type="text" id="size" name="size" class="form-control" value="<%= @favorite.size %>">
  </div>

  <div class="form-group">
    <label for="type_of_drink">
      Type of Drink
    </label>

    <input type="text" id="type_of_drink" name="type_of_drink" class="form-control" value="<%= @favorite.type_of_drink %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update favorite
  </button>
</form>

<hr>

<a href="/favorites">
  Go back
</a>
