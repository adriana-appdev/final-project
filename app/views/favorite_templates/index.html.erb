<div class="row mb-3">
  <div class="col-md-12">
    <%= render("favorite_templates/fav_heading.html.erb") %>

    <a href="/favorites/new" class="btn btn-block btn-outline-secondary">
      Add a new favorite
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Coffee chain
        </th>

        <th>
          Size
        </th>

        <th>
          Drinks
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
        <td>
          <%= favorite.id %>
        </td>

        <td>
          <%= favorite.coffee_chain %>
        </td>

        <td>
          <%= favorite.size %>
        </td>

        <td>
          <%= favorite.drinks_id %>
        </td>

        <td>
          <%= favorite.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(favorite.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(favorite.updated_at) %> ago
        </td>

        <td>
          <a href="/favorites/<%= favorite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
