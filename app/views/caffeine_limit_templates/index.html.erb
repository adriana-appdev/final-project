<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All caffeine limits
    </h1>

    <a href="/caffeine_limits/new" class="btn btn-block btn-outline-secondary">
      Add a new caffeine limit
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Caffeine maximum
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @caffeine_limits.each do |caffeine_limit| %>
      <tr>
        <td>
          <%= caffeine_limit.id %>
        </td>

        <td>
          <%= caffeine_limit.caffeine_maximum %>
        </td>

        <td>
          <%= caffeine_limit.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(caffeine_limit.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(caffeine_limit.updated_at) %> ago
        </td>

        <td>
          <a href="/caffeine_limits/<%= caffeine_limit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
