<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Caffeine limit #<%= @caffeine_limit.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/caffeine_limits" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/caffeine_limits/<%= @caffeine_limit.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit caffeine limit
        </a>
      </div>

      <div class="col">
        <a href="/delete_caffeine_limit/<%= @caffeine_limit.id %>" class="btn btn-block btn-outline-secondary">
          Delete caffeine limit
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Caffeine maximum
      </dt>
      <dd>
        <%= @caffeine_limit.caffeine_maximum %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @caffeine_limit.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@caffeine_limit.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@caffeine_limit.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

