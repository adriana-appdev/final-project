<h1>
  Add a new caffeine serving
</h1>


<hr>

<form action="/create_caffeine_serving" method="post">

  <div class="form-group">
    <label for="caffeine_amount">
      Caffeine amount
    </label>

    <input type="text" id="caffeine_amount" name="caffeine_amount" class="form-control">
  </div>

  <div class="form-group">
    <label for="coffee_chain">
      Coffee chain
    </label>

    <input type="text" id="coffee_chain" name="coffee_chain" class="form-control">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="drinks_id">
      Drinks
    </label>

    <input type="text" id="drinks_id" name="drinks_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create caffeine serving
  </button>
</form>

<hr>

<a href="/caffeine_servings">
  Go back
</a>
