<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Size
        </th>

        <th>
          Caffeine amount
        </th>

        <th>
          Coffee chain
        </th>

        <th>
          Type of drink
        </th>

        <th>
        </th>
      </tr>

      <% @drinks.each do |drink| %>
      <tr>
        <td>
          <%= drink.id %>
        </td>

        <td>
          <%= drink.size %>
        </td>

        <td>
          <%= drink.caffeine_amount %>
        </td>

        <td>
          <%= drink.coffee_chain %>
        </td>

        <td>
          <%= drink.type_of_drink %>
        </td>

        <td>
          <a href="/drinks/<%= drink.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
